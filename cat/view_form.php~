require_once($CFG->dirroot.'/lib/formslib.php');



/**
 * Module instance settings form
 */
class mycat_view_form extends moodleform {

    /**
     * Defines forms elements
     */
    function definition() {

				global $CFG;
				

        $mform = & $this->_form;        
				
				$mform->addElement('header', 'forcategory', get_string('forcategory', 'mycat') . ' ' . $this->_customdata['num'] . ':');
				$mform->addElement('static', 'description', ' ','Description: ' . $this->_customdata['description']);
				$mform->addElement('static', 'maxgrade',' ', 'Max Grade: ' . $this->_customdata['maxgrade']);
				$buttonarray = array();
				$editurl = $CFG->wwwroot . '/mod/mycat/addcategory.php?mycat=' . $this->_customdata['mycatid'] . '&cmid=' . $this->_customdata['cmid']
. '&id=' . $this->_customdata['id'];
				$deleteurl = $CFG->wwwroot . '/mod/mycat/deletecategory.php?catid=' . $this->_customdata['id'] . '&cmid=' . $this->_customdata['cmid'];
				
				
				$mform->addElement('html', '<html>');
				$mform->addElement('html', '<button type="button" onClick="location.href=\'' . $editurl .'\'">Edit</button>');
				$mform->addElement('html','<button type="button" onClick="location.href=\'' . $deleteurl .'\'">Delete</button>');
				$mform->addElement('html', '</html>');

/*
        //-------------------------------------------------------------------------------
        // add standard buttons
        //$this->add_action_buttons();
				$buttonarray=array();
				$buttonarray[] = &$mform->createElement('submit', 'submitbutton', get_string('savechanges'));
				$buttonarray[] = &$mform->createElement('reset', 'resetbutton', get_string('revert'));
				$buttonarray[] = &$mform->createElement('cancel');
				$mform->addGroup($buttonarray, 'buttonar', '', array(' '), false);
				$mform->closeHeaderBefore('buttonar'); */

    }
}
